{
  "description": "Copy formatted somthing to clipboard",
  "manifest_version": 2,
  "name": "copyf",
  "version": "1.1.1",
  "icons": {
    "64": "icon/ic_content_copy_black_48px.svg"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "64": "icon/ic_content_copy_black_48px.svg"
    },
    "default_title": "copyf",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_ui": {
    "page": "html/option.html"
  },
  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "tabs",
    "storage",
    "notifications"
  ],
  "applications": {
    "gecko": {
      "id": "copyf@snca.net",
      "strict_min_version": "57.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
